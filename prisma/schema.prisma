generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id              Int       @id @default(autoincrement())
  externalId      String    @unique
  attributes      Json
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  stripeCustomerId String?
  orders          Order[]   @relation("UserOrders") // Adiciona a relação inversa com o nome da relação
}

model Order {
  id              String    @id @default(cuid())
  user            User      @relation(fields: [userId], references: [id], name: "UserOrders") // Define o nome da relação aqui também
  userId          Int
  amount          Float
  currency        String
  status          String
  createdDate     DateTime  @default(now())
  paymentIntentID String?   @unique
  products        Product[]
}

model Product {
  id          String  @id @default(cuid())
  name        String
  description String?
  price       Float
  image       String?
  quantity    Float   @default(0)
  orders      Order[]
}
